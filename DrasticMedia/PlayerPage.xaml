<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DrasticMedia.PlayerPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:DrasticMedia;assembly=DrasticMedia.Core"
             xmlns:local="clr-namespace:DrasticMedia">
    <GridLayout RowDefinitions="*, 200">
        <Button x:Name="TestButton" Text="Play Test"/>
        <Grid BackgroundColor="Green" GridLayout.Row="1">
            <controls:DrasticSlider x:Name="DrasticSlider" Value="{Binding CurrentPosition, Mode=OneWay}"  />
        </Grid>
    </GridLayout>
</ContentPage>