<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:local="clr-namespace:DrasticMedia"
             xmlns:converters="clr-namespace:DrasticMedia.Converters"
             x:Class="DrasticMedia.App"
             windows:Application.ImageDirectory="Assets">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:PlayPauseConverter x:Key="PlayPauseConverter" />
            <converters:AlbumArtConverter x:Key="AlbumArtConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
