<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="DrasticMedia.AlbumArtPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DrasticMedia">
	<ContentPage.Content>
        <GridLayout ColumnDefinitions="*, Auto, *">
            <VerticalStackLayout Spacing="5" MaximumWidthRequest="500"
                HorizontalOptions="Center" 
                VerticalOptions="Center" GridLayout.Column="1">
                <Image x:Name="AlbumArtView" Source="{Binding CurrentAlbumArt, Converter={StaticResource AlbumArtConverter}}" />
                <Label FontAttributes="Bold" FontSize="Subtitle" Text="{Binding CurrentArtist}"/>
                <Label FontSize="Subtitle" Text="{Binding CurrentTrackTitle}"/>
            </VerticalStackLayout>
        </GridLayout>
	</ContentPage.Content>
</ContentPage>